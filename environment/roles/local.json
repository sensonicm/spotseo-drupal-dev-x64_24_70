{
  "name": "local",
  "description": "installs sdd environment",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "apache": {
      "mpm": "prefork"
    },
    "mariadb": {
      "use_default_repository": false,
      "server_root_password": "simplepass",
      "forbid_remote_root": false,
      "allow_root_pass_change": true,
      "client": {
        "development_files": false
      }
    }
  },
  "override_attributes": {},
  "env_run_lists" : {
    "production" : [],
    "preprod" : [],
    "dev": []
  },
  "run_list": [
    "recipe[SDD::curl]",
    "recipe[apt]",
    "recipe[apache2]",
    "recipe[apache2::mod_expires]",
    "recipe[mariadb::server]",
    "recipe[mariadb::client]",
    "recipe[SDD::database]",
    "recipe[SDD::php]",
    "recipe[SDD::php_mods]",
    "recipe[SDD::uploadprogress]",
    "recipe[SDD::folders]",
    "recipe[SDD::vhosts]"
  ]
}
